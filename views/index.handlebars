{{!-- Make Room --}}
<div class="container">
    <div class="row">
        <div class="col s12">
            <h1 id="make-game-header">Make a Game:</h1>
        </div>
    </div>
    <div class="row">
        <div class="input-field col m9 s12">
            <input placeholder="Game Name" id="make-game-input" type="text" class="validate">
        </div>
        <div class="col m3 s12">
            <select class="browser-default" id="how-many-players">
                <option value="" disabled selected>How many players?</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col s12 center-align">
            <a class="waves-effect waves-light btn" id="start-button">Start Game</a>
        </div>
    </div>
</div>
